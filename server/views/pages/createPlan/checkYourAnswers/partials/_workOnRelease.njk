<h2 class="govuk-heading-m">Work on release</h2>
<dl class="govuk-summary-list govuk-!-margin-bottom-8">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
      Hoping to work on release
    </dt>
    <dd class="govuk-summary-list__value">
      {{ contentLookup.fields.hopingToGetWork[record.hopingToGetWork] if record.hopingToGetWork }}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="{{ addressLookup.createPlan.hopingToGetWork(id, 'edit') }}">
        Change<span class="govuk-visually-hidden"> whether they're hoping to work when they're released</span>
      </a>
    </dd>
  </div>

  {% if record.hopingToGetWork !== 'YES' %}
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
        Reasons why not hoping
      </dt>
      <dd class="govuk-summary-list__value">
        {% for item in record.reasonToNotGetWork %}
          <div>{{ contentLookup.fields.reasonToNotGetWork[item] }}{{ ' - ' + record.reasonToNotGetWorkOther if item === 'OTHER' }}{{ ',' if record.reasonToNotGetWork.length !== loop.index }}</div>
        {% endfor %}
      </dd>
      <dd class="govuk-summary-list__actions">
        <a class="govuk-link" href="{{ addressLookup.createPlan.reasonToNotGetWork(id, 'edit') }}">
          Change<span class="govuk-visually-hidden"> the reasons why they're not hoping to work</span>
        </a>
      </dd>
    </div>
  {% endif %}
</dl>