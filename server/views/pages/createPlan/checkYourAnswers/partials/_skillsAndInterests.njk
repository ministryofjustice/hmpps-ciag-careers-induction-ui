<h2 class="govuk-heading-m">Skills and interests</h2>

<dl class="govuk-summary-list govuk-!-margin-bottom-8">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
      Type of work interested in
    </dt>
    <dd class="govuk-summary-list__value" data-qa="workInterests">
      {% for item in record.workInterests %}
        <div data-qa="workInterests-{{ loop.index }}">{{ contentLookup.fields.workInterests[item] }}{{ ' - ' + record.workInterestsOther if item === 'OTHER' }}{{ ',' if record.workInterests.length !== loop.index }}</div>
      {% endfor %}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link govuk-link--no-visited-state" href="{{ addressLookup.createPlan.workInterests(id, 'edit') }}" data-qa="workInterestsLink">
        Change<span class="govuk-visually-hidden"> type of work interested in</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
      Particular job roles of interest
    </dt>
    <dd class="govuk-summary-list__value" data-qa="particularJobInterests">
      {% for item in record.particularJobInterests %}
        <p class="govuk-body"  data-qa="particularJobInterests-{{ loop.index }}">
          {{ contentLookup.fields.workInterests[item.workInterest] }}:<br>
          {{ item.role if item.role else 'Not entered'}}
        </p>
      {% endfor %}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link govuk-link--no-visited-state" href="{{ addressLookup.createPlan.particularJobInterests(id, 'edit') }}" data-qa="particularJobInterestsLink">
        Change<span class="govuk-visually-hidden"> particular job roles of interest</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
      Skills
    </dt>
    <dd class="govuk-summary-list__value" data-qa="skills">
      {% for item in record.skills %}
        <div data-qa="skills-{{ loop.index }}">{{ contentLookup.fields.skills[item] }}{{ ' - ' + record.skillsOther if item === 'OTHER' }}{{ ',' if record.skills.length !== loop.index }}</div>
      {% endfor %}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="{{ addressLookup.createPlan.skills(id, 'edit') }}" data-qa="skillsLink">
        Change<span class="govuk-visually-hidden"> skills</span>
      </a>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key govuk-!-width-one-quarter">
      Interests
    </dt>
    <dd class="govuk-summary-list__value" data-qa="personalInterests">
      {% for item in record.personalInterests %}
        <div data-qa="personalInterests-{{ loop.index }}">{{ contentLookup.fields.personalInterests[item] }}{{ ' - ' + record.personalInterestsOther if item === 'OTHER' }}{{ ',' if record.personalInterests.length !== loop.index }}</div>
      {% endfor %}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="{{ addressLookup.createPlan.personalInterests(id, 'edit') }}" data-qa="personalInterestsLink">
        Change<span class="govuk-visually-hidden"> interests</span>
      </a>
    </dd>
  </div>
</dl>